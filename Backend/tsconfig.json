{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": "./src"
  },
  "typedocOptions": {
    "entryPoints": ["src/app.ts"],
    "out": "docs",
    "name": "SSMS DOCS",
    "theme": "default",
    "excludePrivate": true
  },
  "include": ["src/**/*.ts", "src/queries/userQueries.ts"],
  "exclude": ["node_modules"]
}
